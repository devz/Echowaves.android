<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echowaves.android.BlendsTabFragment">


    <Button
        android:id="@+id/blends_addBlending"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_button"
        android:gravity="center_horizontal"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/blends_addBlendingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/blends_addBlending"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/blends_addBlending"
        android:gravity="center_vertical|right"
        android:singleLine="true"
        android:text="@string/add_new_blend_label"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blends_addBlending">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/blends_requestedBlends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ListView
                android:id="@+id/blends_unconfirmedBlends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blends_requestedBlends"
                android:layout_centerHorizontal="true" />

            <ListView
                android:id="@+id/blends_blendedWith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blends_unconfirmedBlends"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50pt" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
