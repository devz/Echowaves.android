<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_requestedBlends"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/row_requestedBlends_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:text="wave name"
        android:textSize="20sp"
        android:layout_weight="1"
        android:singleLine="true" />


    <Button
        android:id="@+id/row_requestedBlends_deleteButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/circle_button_red"
        android:text="-"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:layout_weight="0" />

    <Button
        android:id="@+id/row_requestedBlends_addButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical|right"
        android:layout_margin="5dp"
        android:background="@drawable/circle_button"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_weight="0" />

</LinearLayout>
