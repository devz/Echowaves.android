<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
tools:context="com.echowaves.android.BlendwithActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/ewColor">

    <TextView
        android:id="@+id/addwave_textViewNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/ewColor"
        android:text="@string/title_activity_add_child_wave"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</RelativeLayout>

<!-- Action Bar -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/abs__action_bar_default_height"
    android:background="@color/ewColor">

    <ImageView
        android:id="@+id/blendwith_imageViewBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:background="@color/ewColor"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:src="@drawable/back" />

</RelativeLayout>

<EditText
    android:id="@+id/blendwith_undercontsruction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="under construction"
    android:maxLines="1"
    android:singleLine="true"
    android:background="@drawable/rounded_inputtext"
    android:padding="5dp"
    android:layout_margin="5dp"/>


</LinearLayout>
