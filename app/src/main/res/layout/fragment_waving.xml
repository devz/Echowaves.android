<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echowaves.android.WavingTabFragment">

    <TextView
        android:id="@+id/waving_waveSelectedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="Wave Selected:"
        android:textSize="25dp" />

    <Button
        android:id="@+id/waving_editWaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/waving_waveSelectedLabel"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="EditWave"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25sp" />


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/waving_editWaveButton"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:id="@+id/waving_addNewWaveLabel"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:text="@string/add_new_wave_label"
            android:textSize="20sp" />

        <Button
            android:id="@+id/waving_addNewWaveButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="5dp"
            android:background="@drawable/circle_button"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/waving_photosSinceLabel"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:text="Photos since:"
            android:textSize="20sp" />

        <Button
            android:id="@+id/waving_sinceDateTimeValueButton"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:text="12:00am 01/01/0001"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/waving_photosCount"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="5dp"
            android:text="0"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/waving_waveAllButton"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:padding="15dp"
            android:text="Wave all"
            android:textColor="@android:color/white"
            android:textSize="30sp" />


    </GridLayout>


</RelativeLayout>
