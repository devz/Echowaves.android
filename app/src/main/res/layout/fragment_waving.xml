<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echowaves.android.WavingTabFragment">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="3">


        <Button
            android:id="@+id/waving_editWaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/waving_waveSelectedLabel"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:text="Current Wave"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/waving_addNewWaveLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:text="@string/add_new_wave_label"
                android:textSize="15sp" />

            <Button
                android:id="@+id/waving_addNewWaveButton"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical|left"
                android:layout_margin="5dp"
                android:background="@drawable/circle_button"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="50sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/waving_photosSinceLabel"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:text="Last waved:"
            android:textSize="15sp" />

        <Button
            android:id="@+id/waving_sinceDateTimeValueButton"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:text="12:00am 01/01/0001"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

    </GridLayout>


</RelativeLayout>
