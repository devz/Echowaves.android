<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echowaves.android.WavingTabFragment">

    <TextView
        android:id="@+id/waving_waveSelectedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="Wave Selected:"
        android:textSize="25dp" />

    <Button
        android:id="@+id/waving_editWaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/waving_waveSelectedLabel"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="EditWave"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp" />


    <Button
        android:id="@+id/waving_addNewWaveButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/circle_button"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:layout_below="@+id/waving_waveAllButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/waving_addNewWaveLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/waving_addNewWaveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/waving_addNewWaveButton"
        android:gravity="center_vertical|end"
        android:singleLine="true"
        android:text="@string/add_new_wave_label"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/waving_photosSinceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photos since:"
        android:textSize="20dp"
        android:layout_below="@+id/waving_editWaveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/waving_addNewWaveLabel"
        android:layout_alignEnd="@+id/waving_addNewWaveLabel" />

    <TextView
        android:id="@+id/waving_sinceDateTimeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:20am 03/06/2014"
        android:textSize="20dp"
        android:layout_alignTop="@+id/waving_photosSinceLabel"
        android:layout_toRightOf="@+id/waving_photosSinceLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/waving_photosCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/waving_photosSinceLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/waving_waveAllButton"
        android:layout_toLeftOf="@+id/waving_sinceDateTimeValue" />

    <Button
        android:id="@+id/waving_waveAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wave All"
        android:layout_below="@+id/waving_sinceDateTimeValue"
        android:layout_toRightOf="@+id/waving_photosCount" />


</RelativeLayout>
