<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echowaves.android.WavingTabFragment">


    <Button
        android:id="@+id/waving_addNewWaveButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_button"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/waving_addNewWaveLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/waving_addNewWaveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/waving_addNewWaveButton"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/waving_addNewWaveButton"
        android:gravity="center_vertical|end"
        android:singleLine="true"
        android:text="@string/add_new_wave_label" />
</RelativeLayout>
